timeout 60 'makoctl mode -a away' resume 'makoctl mode -r away'
timeout 150 'swaymsg "output * power off"' resume 'swaymsg "output * power on"'
timeout 180 'swaylock'
timeout 360 'systemctl suspend -i'
before-sleep 'swaylock && playerctl pause'
after-resume 'swaymsg "output * dpms on"'
lock 'swaylock'
unlock 'pkill --signal SIGUSR1 swaylock'
